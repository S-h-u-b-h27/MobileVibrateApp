<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/cal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:textSize="25dp"
            android:text="Calculator"
            />

        <EditText
            android:layout_width="388dp"
            android:id="@+id/result1"
            android:hint="                          Enter the Number"
            android:layout_height="60dp"
            android:layout_above="@id/clear"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/three"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            android:background="@android:color/holo_orange_light"
            android:layout_above="@id/zero"
            android:layout_marginRight="2dp"
            android:text="+"
            />

        <Button
            android:id="@+id/sub"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@id/plus"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/six"
            android:background="@android:color/holo_orange_light"
            android:text="-" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="*"
            android:layout_toRightOf="@id/nine"
            android:background="@android:color/holo_orange_light"
            android:layout_above="@id/sub"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="2dp"
            android:id="@+id/mul"
            />

        <Button
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@id/mul"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/three"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="3dp"
            android:background="@android:color/holo_orange_light"
            android:text="/" />

        <Button
            android:layout_width="83dp"
            android:layout_height="41dp"
            android:text="%"
            android:layout_toLeftOf="@id/div"
            android:layout_above="@id/nine"
            android:layout_marginRight="4dp"
            android:background="@android:color/holo_orange_light"
            android:id="@+id/mod"
            />

        <Button
            android:layout_width="83dp"
            android:layout_height="41dp"
            android:text="^"
            android:layout_toLeftOf="@id/mod"
            android:layout_above="@id/eight"
            android:layout_marginRight="5dp"
            android:background="@android:color/holo_orange_light"
            android:id="@+id/pow"
            />

        <Button
            android:id="@+id/equal"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/three"
            android:layout_gravity="right|bottom"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@id/dot"
            android:text="=" />

        <Button
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/zero"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="2dp"
            />


        <Button
            android:id="@+id/dot"
            android:layout_width="86dp"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@id/zero"
            android:gravity="bottom"
            android:text="                           ." />

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/zero"
            android:text="1"
            android:layout_marginLeft="2dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/two"
            android:layout_toRightOf="@id/one"
            android:layout_above="@id/zero"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/three"
            android:layout_toRightOf="@id/two"
            android:layout_above="@id/zero"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/four"
            android:layout_above="@id/one"
            android:layout_marginLeft="2dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_toRightOf="@id/four"
            android:id="@+id/five"
            android:layout_above="@id/two"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/six"
            android:layout_toRightOf="@id/five"
            android:layout_above="@id/three"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/seven"
            android:layout_above="@id/four"
            android:layout_marginLeft="2dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/eight"
            android:layout_toRightOf="@id/seven"
            android:layout_above="@id/five"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/nine"
            android:layout_toRightOf="@id/eight"
            android:layout_above="@id/six"
            />

        <Button
            android:layout_width="83dp"
            android:layout_height="41dp"
            android:id="@+id/clear"
            android:layout_toLeftOf="@id/pow"
            android:layout_above="@id/seven"
            android:layout_marginRight="5dp"
            android:text="C"
            android:layout_marginLeft="4dp"
            android:background="@android:color/holo_orange_light"
            />
    </RelativeLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>