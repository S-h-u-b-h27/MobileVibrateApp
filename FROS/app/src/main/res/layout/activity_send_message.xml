<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".send_message">

    <EditText
        android:id="@+id/txt_phone_number"
        android:layout_width="389dp"
        android:layout_height="57dp"

        android:layout_marginTop="78dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="320dp"
        android:hint="Enter phone number: "
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_message"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_message"
        android:layout_width="367dp"
        android:layout_height="201dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="321dp"
        android:gravity="top"
        android:hint="Enter phone number: "
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_phone_number" />

    <EditText
        android:id="@+id/longi"
        android:layout_width="367dp"
        android:layout_height="201dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="321dp"
        android:gravity="top"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_phone_number" />

    <EditText
        android:id="@+id/lati"
        android:layout_width="367dp"
        android:layout_height="201dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="321dp"
        android:gravity="top"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/longi" />

    <Button
        android:layout_width="370dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="15dp"
        android:onClick="btn_send"
        android:text="Send "
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_message" />

</androidx.constraintlayout.widget.ConstraintLayout>